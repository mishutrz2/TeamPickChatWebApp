@page "/teampick"

@model TeamPickChatWebApp.Pages.TeamPickModel


<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Three Captains</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Additional CSS can be added here */
    </style>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <div class="flex flex-col items-center">
            <!-- Top List -->
            <div class="bg-white shadow-md rounded p-4 mb-6 w-full max-w-2xl">
                <ul id="topList" class="list-decimal list-inside">
                    <li class="p-2 border-b">Element 1</li>
                    <li class="p-2 border-b">Element 2</li>
                    <li class="p-2 border-b">Element 3</li>
                    <li class="p-2 border-b">Element 4</li>
                    <li class="p-2 border-b">Element 5</li>
                    <li class="p-2 border-b">Element 6</li>
                    <li class="p-2 border-b">Element 7</li>
                    <li class="p-2">Element 8</li>
                </ul>
            </div>

            <!-- Captains -->
            <div class="flex justify-around w-full max-w-4xl">
                <!-- Captain 1 -->
                <div class="bg-white shadow-md rounded p-4">
                    <div class="bg-gray-200 rounded-full w-16 h-16 flex items-center justify-center mb-4">
                        <span class="text-lg font-bold">1C</span>
                    </div>
                    <ul id="captain1List" class="list-decimal list-inside">
                        <!-- Elements chosen by Captain 1 will appear here -->
                    </ul>
                </div>

                <!-- Captain 2 -->
                <div class="bg-white shadow-md rounded p-4">
                    <div class="bg-gray-200 rounded-full w-16 h-16 flex items-center justify-center mb-4">
                        <span class="text-lg font-bold">2C</span>
                    </div>
                    <ul id="captain2List" class="list-decimal list-inside">
                        <!-- Elements chosen by Captain 2 will appear here -->
                    </ul>
                </div>

                <!-- Captain 3 -->
                <div class="bg-white shadow-md rounded p-4">
                    <div class="bg-gray-200 rounded-full w-16 h-16 flex items-center justify-center mb-4">
                        <span class="text-lg font-bold">3C</span>
                    </div>
                    <ul id="captain3List" class="list-decimal list-inside">
                        <!-- Elements chosen by Captain 3 will appear here -->
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        // JavaScript for interactive features
        const topList = document.getElementById('topList');
        const captain1List = document.getElementById('captain1List');
        const captain2List = document.getElementById('captain2List');
        const captain3List = document.getElementById('captain3List');

        let currentCaptain = 1;

        topList.addEventListener('click', function (event) {
            if (event.target.tagName === 'LI') {
                const element = event.target;
                switch (currentCaptain) {
                    case 1:
                        captain1List.appendChild(element.cloneNode(true));
                        currentCaptain = 2;
                        break;
                    case 2:
                        captain2List.appendChild(element.cloneNode(true));
                        currentCaptain = 3;
                        break;
                    case 3:
                        captain3List.appendChild(element.cloneNode(true));
                        currentCaptain = 1;
                        break;
                }
                element.parentNode.removeChild(element);
            }
        });
    </script>
</body>
</html>
